#!/usr/bin/env bash
#
# conda_segment

PL_SYMBOLS['conda']=${PL_SYMBOLS[conda]:-'Ï€ '}

# -----------------------------------------------------------------------------
# segment content: conda virtual environment name
# shellcheck disable=SC2034
function conda_segment {
    local -n _content="${1:-}"
    if [[ ${CONDA_SHLVL:-} -ne 0 && -n ${CONDA_DEFAULT_ENV:-} ]]; then
        local venv="${CONDA_DEFAULT_ENV##*/}"
        _content="${PL_SYMBOLS[conda]}${venv}"
    fi
}
