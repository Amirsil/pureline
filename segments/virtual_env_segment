#!/usr/bin/env bash

# virtual_env_segment

PL_PYTHON_SYMBOL='Ï€'

# -----------------------------------------------------------------------------
# append to prompt: python virtual environment name
# arg: $1 primary color
# arg: $2 secondary color
function virtual_env_segment {
    [[ -z ${VIRTUAL_ENV:-} ]] && return

    local venv="${VIRTUAL_ENV##*/}"
    local primary_color="$1"
    local secondary_color="$2"
    add_segment "${PL_PYTHON_SYMBOL}${venv}" "${primary_color}" "${secondary_color}"
}

