#!/usr/bin/env bash
#
# conda_env_segment

PL_CONDA_SYMBOL='Ï€ '

# -----------------------------------------------------------------------------
# append to prompt: conda virtual environment name
# arg: $1 primary color
# arg: $2 secondary color
function conda_env_segment {
    if [[ ${CONDA_SHLVL:-} -ne 0 && -n ${CONDA_DEFAULT_ENV:-} ]]; then
        local venv="${CONDA_DEFAULT_ENV##*/}"
        local primary_color="$1"
        local secondary_color="$2"
        add_segment "${PL_CONDA_SYMBOL}${venv}" "${primary_color}" "${secondary_color}"
    fi
}
