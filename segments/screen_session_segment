#!/bin/env bash
#
# screen_session_segmen

PL_SYMBOLS+=(
    # GUI Font Symbols  # Standard Symbols for tty
    [screen]="ðŸ’»"       [tty_screen]="â– " 
)

# -----------------------------------------------------------------------------
# append to prompt: "screen" session name
# arg: $1 foreground color
# arg; $2 background color
function screen_session_segment {
    if [[ $TERM == screen.* && -n $STY ]]; then
        local bg_color="$1"
        local fg_color="$2"
        local content screen_symbol end_symbol
        pl_symbol screen_symbol 'screen'
        content="$screen_symbol ${STY}"
        segment_end end_symbol "$fg_color" "$bg_color"
        segment_content content "$fg_color" "$bg_color"
        PS1+="$end_symbol $content "
        # shellcheck disable=SC2034
        __last_color="$bg_color"
    fi
}


