#!/usr/bin/env bash
#
# aws_profile_segment

PL_AWS_SYMBOL='‚òÅ '

# -----------------------------------------------------------------------------
# append to prompt: aws profile name
# arg: $1 foreground color
# arg; $2 background color
function aws_profile_segment {
    [[ -z ${AWS_PROFILE:-} ]] && return
    local bg_color="$1"
    local fg_color="$2"
    add_segment "${PL_AWS_SYMBOL}${AWS_PROFILE}" "${fg_color}" "${bg_color}"
}
