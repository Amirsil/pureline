#!/usr/bin/env bash
#
# aws_profile_segment

PL_AWS_SYMBOL='‚òÅ '

# -----------------------------------------------------------------------------
# append to prompt: aws profile name
# arg: $1 primary color
# arg: $2 secondary color
function aws_profile_segment {
    [[ -z ${AWS_PROFILE:-} ]] && return
    add_segment "${PL_AWS_SYMBOL}${AWS_PROFILE}" "$1" "$2"
}
