#!/usr/bin/env bash
#
# aws_profile_segment

PL_AWS_SYMBOL='‚òÅ '

# -----------------------------------------------------------------------------
# append to prompt: aws profile name
# arg: $1 primary color
# arg: $2 secondary color
function aws_profile_segment {
    [[ -z ${AWS_PROFILE:-} ]] && return
    local primary_color="$1"
    local secondary_color="$2"
    add_segment "${PL_AWS_SYMBOL}${AWS_PROFILE}" "${secondary_color}" "${primary_color}"
}
